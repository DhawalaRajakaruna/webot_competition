    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "python",  // Use "python" for debugging Python files
            "request": "launch",
            "program": "${file}",  // Runs the currently open Python file
            "console": "integratedTerminal",  // Output is displayed in VS Code's terminal
            "cwd": "${fileDirname}",  // Sets the current working directory to the file's directory
            "justMyCode": true  // Debug only your code, not third-party libraries
        }
    ]
}